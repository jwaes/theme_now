                    <div class="container">
                        <div class="row justify-content-end">
                            <div class="col-lg-6 pb16">
                                <img src="/theme_now/static/src/img/content/now_logo_horizontal.svg" />
                            </div>
                            <div class="col-lg-2 pb16">
                                <h5>Company</h5>
                                <ul class="list-unstyled">
                                    <li class="py-1">
                                        <a href="#">About</a>
                                    </li>
                                    <li class="py-1">
                                        <a href="#">Designers</a>
                                    </li>
                                    <li class="py-1">
                                        <a href="#">Retailers</a>
                                    </li>
                                    <li class="py-1">
                                        <a href="#">Ordering &amp; shipping</a>
                                    </li>
                                    <li class="py-1">
                                        <a href="#">Terms &amp; conditions</a>
                                    </li>
                                </ul>
                            </div>
                            <div class="col-lg-2 pb16">
                                <h5>Follow us</h5>
                                <ul class="list-unstyled">
                                    <li class="py-1">
                                        <i class="fa fa-1x fa-fw fa-twitter-square mr-2" />
                                        <a href="/website/social/twitter" target="_blank">Twitter</a>
                                    </li>
                                    <li class="py-1">
                                        <i class="fa fa-1x fa-fw fa-instagram mr-2" />
                                        <a href="/website/social/instagram" target="_blank">Instagram</a>
                                    </li>
                                    <li class="py-1">
                                        <i class="fa fa-1x fa-fw fa-pinterest mr-2" />
                                        <a href="/website/social/pinterest" target="_blank">Pinterest</a>
                                    </li>
                                </ul>
                            </div>
                            <div class="col-lg-2 pb16">
                                <h5>Professional</h5>
                                <ul class="list-unstyled">
                                    <li class="py-1">
                                        <a href="#">B2B</a>
                                    </li>
                                    <li class="py-1">
                                        <a href="#">Catalogus</a>
                                    </li>
                                    <li class="py-1">
                                        <a href="#">3D files</a>
                                    </li>
                                    <li class="py-1">
                                        <a href="#">Image bank</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </xpath>
    </template>

