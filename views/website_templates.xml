                    <div class="container">
                        <div class="row justify-content-end">
                            <div class="col-lg-6 pb16">
                                <img src="/theme_now/static/src/img/content/now_logo_horizontal.svg" />
                            </div>
                            <div class="col-lg-2 pb16">
                                <h5>Company</h5>
                                <ul class="list-unstyled">
                                    <li class="py-1">
                                        <a href="#">About</a>
                                    </li>
                                    <li class="py-1">
                                        <a href="#">Designers</a>
                                    </li>
                                    <li class="py-1">
                                        <a href="#">Retailers</a>
                                    </li>
